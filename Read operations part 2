file_read=open('C:/Users/shaur/OneDrive/Desktop/Python Activities/Read operations part 2', 'r')
print("File in read mode -")
print(file_read.read())
file_read.close()

file_write=open('C:/Users/shaur/OneDrive/Desktop/Python Activities/Read operations part 2', 'w')
file_write.write("File in write mode...")
file_write.write("Hi im penguine im 1 year old")
file_write.close()

file_append=open('C:/Users/shaur/OneDrive/Desktop/Python Activities/Read operations part 2', 'a')
file_append.write("\n File in append mode...")
file_append.write("Hi im penguine im 1 year old")
file_append.close()
